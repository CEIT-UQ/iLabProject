extends layout

append head
  title= title
  link(rel='stylesheet', type='text/css', href='/stylesheets/fullcalendar.css')
  link(rel='stylesheet', type='text/css', href='/stylesheets/jquery.miniColors.css')
  link(rel='stylesheet', type='text/css', href='/stylesheets/poshytip.css')
  link(rel='stylesheet', type='text/css', href='/stylesheets/jquery-ui-1.8.20.custom.css')
  script(type='text/javascript', src='/javascripts/jquery-1.7.2.min.js')
  script(type='text/javascript', src='/javascripts/jquery-ui-1.8.20.custom.min.js')
  script(type='text/javascript', src='/javascripts/jquery.miniColors.min.js')
  script(type='text/javascript', src='/javascripts/jquery.poshytip.min.js')
  script(type='text/javascript', src='/javascripts/fullcalendar.js')
  script(type='text/javascript', src='/javascripts/admin.js')

    
append content
  input#lab_id(type='hidden', name='lab_id', value=lab_id)
  input#group_id(type='hidden', name='group_id', value=group.group_id)
  input#broker_url(type='hidden', name='broker_url', value=group.broker_url)
  #title
    h3 Lab ID: #{lab_id}
  #calendar 
  #event_edit_container(style="display:none")
    form(class="event-form")
      input(type='hidden')
      ul
        li
          label Date: 
          span(class="date_holder")
        
        li(style="display: none")
          label(for="lab", class="event-info") Lab Id
          span(name="lab")

        li
          label(for="start") From
          select(name="start", class="event-info")
            option(value="") Select Start Time

          label(for="end") to
          select(name="end", class="event-info")
            option(value="") Select End Time

        li
          label(for="uss", class="event-info") USS
          span(name="uss", class="event-info") 

          label(for="group", class="event-info", style="margin-left: 10px") Group 
          span(name="group", class="event-info") #{group.group_id}

          label(for="user", class="event-info", style="margin-left: 10px") User 
          span(name="user", class="event-info") 

        li
          label(for="comment", class="event-info") Comment
          br 
          textarea(name="comment", style="width: 300px; height: 60px")
           
    
  #overlay(class="overlay", style="display: none")
    #box(class="box", style="display: none; text-align: center") 
      img(src="/images/loading.gif")
      span(style="color: #000000; font-family: Arial; font-weight: bold") Loading ...

  input#btnColors(type="button", value="Set colors")
      
  #users(style="position: absolute; bottom: 75px; left: 10px; width: 120px; height: 150px; z-index: 20; background: #FFFFFF; border: 1px solid #CCCCCC; padding: 15px; display: none")
    - each user in group.users
      p() #{user} 
        input(type="text", class="color", user=user)
    p 
      input#closeColors(type="button", value="Close", style="float: right")
        
          
      
        

